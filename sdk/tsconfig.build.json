{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "CommonJS",          
    "moduleResolution": "node",    
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "TypeExtensions.d.ts"],
  "exclude": ["node_modules", "lib"]
}
