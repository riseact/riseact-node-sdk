{
  "name": "riseact-node-sdk",
  "private": true,
  "workspaces": [
    "dev-app/client",
    "dev-app/common",
    "dev-app/server",
    "sdk"
  ],
  "version": "1.0.0",
  "description": "A template for Riseact app written in Node.js",
  "main": "build/index.js",
  "license": "MIT",
  "scripts": {
    "open-tunnel": "ngrok http 3000",
    "dev": "npm run clean-vite-cache && concurrently -c blue,red -n SRV,GQL --kill-others \"yarn workspace server dev\" \"yarn workspace common codegen\"",
    "dev:local": "RISEACT_ACCOUNTS_URL=http://accounts.localhost:8000 RISEACT_CORE_URL=http://core.localhost:8000 yarn dev",
    "clean-vite-cache": "rm -rf ./dev-app/client/node_modules/.vite",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --fix --ext .ts,.tsx ."
  },
  "devDependencies": {
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.33.2",
    "tsc-alias": "^1.8.8",
    "yarn": "^1.22.21",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@typescript-eslint/eslint-plugin": "7.7.0",
    "@typescript-eslint/parser": "7.7.0",
    "concurrently": "7.6.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-unused-imports": "3.1.0",
    "prettier": "3.2.5",
    "typescript": "^5.4.5"
  }
}
